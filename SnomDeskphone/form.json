{
    "elements": [
        {
            "type": "Image",
            "mediaID": 16356
        },
        {
            "type": "Label",
            "caption": "Configure Snom IP phone",
            "name": "InstanceLabel"
        },
        {
            "type": "ValidationTextBox",
            "caption": "Phone IP address",
            "name": "PhoneIP",
            "validate": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?).){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
        },
        {
            "type": "ValidationTextBox",
            "caption": "Phone MAC address",
            "name": "PhoneMac",
            "validate": "^((00:04:13:)([0-9a-fA-F]{2}:){2})|((000413)([0-9a-fA-F]{2}){2})[0-9a-fA-F]{2}$"
        },
        {
            "type": "Select",
            "caption": "Phone model",
            "name": "PhoneModel",
            "options": [
                {
                    "caption": "Snom D335",
                    "value": "snomD335"
                },
                {
                    "caption": "Snom D385",
                    "value": "snomD385"
                },
                {
                    "caption": "Snom D735",
                    "value": "snomD735"
                },
                {
                    "caption": "Snom D785",
                    "value": "snomD785"
                },
                {
                    "caption": "Snom D862",
                    "value": "snomD862"
                },
                {
                    "caption": "Snom D865",
                    "value": "snomD865"
                }
            ]
        },
        {
            "type": "ValidationTextBox",
            "caption": "Local IP address",
            "name": "LocalIP",
            "validate": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?).){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
        },
        {
            "type": "CheckBox",
            "caption": "Configure function keys",
            "name": "FunctionKeys",
            "onChange": "echo $PhoneIP;"
        }
    ],
    "actions": [
        {
            "type": "Button",
            "caption": "Ping phone",
            "onClick": "echo 'This will ping the phone\n(Not implemented)';"
        },
        {
            "type": "Label",
            "name": "PhoneReachable",
            "caption": ""
        }
    ]
}