{
    "elements": [
        {
            "type": "Label",
            "caption": "Configure Snom IP phone",
            "name": "InstanceLabel"
        },
        {
        "type": "RowLayout",
        "items": [
            {
                "type": "ValidationTextBox",
                "caption": "IP address",
                "name": "PhoneIP",
                "validate": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?).){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
            },
            {
                "type": "Button",
                "caption": "Ping",
                "onClick": "echo SNMD_PingPhone($id);"
            }
        ]
        },
        {
            "type": "ValidationTextBox",
            "caption": "MAC address",
            "name": "PhoneMac",
            "validate": "^((00:04:13:)([0-9a-fA-F]{2}:){2})|((000413)([0-9a-fA-F]{2}){2})[0-9a-fA-F]{2}$"
        },
        {
            "type": "Select",
            "caption": "Phone model",
            "name": "PhoneModel",
            "options": [
                {
                    "caption": "Snom D335",
                    "value": "snomD335"
                },
                {
                    "caption": "Snom D385",
                    "value": "snomD385"
                },
                {
                    "caption": "Snom D735",
                    "value": "snomD735"
                },
                {
                    "caption": "Snom D785",
                    "value": "snomD785"
                },
                {
                    "caption": "Snom D862",
                    "value": "snomD862"
                },
                {
                    "caption": "Snom D865",
                    "value": "snomD865"
                }
            ]
        },
        {
            "type": "ValidationTextBox",
            "caption": "Local IP address", 
            "name": "LocalIP",
            "validate": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?).){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
        },
        {
            "type": "List",
            "caption": "Function keys settings",
            "name": "FkeysSettings",
            "add": true,
            "delete": true,
            "columns": [
                {
                    "caption": "Function key",
                    "name": "FkeyNo",
                    "width": "auto",
                    "align": "center",
                    "add": -1,
                    "edit": {
                        "type": "NumberSpinner"
                    }
                },
                {
                    "caption": "Recieve value only",
                    "name": "RecieveOnly",
                    "width": "100px",
                    "visible": false,
                    "add": false,
                    "edit": {
                        "type": "CheckBox"
                    }
                },
                {
                    "caption": "Action variable",
                    "name": "ActionVariableId",
                    "width": "auto",
                    "align": "center",
                    "add": 0,
                    "edit": {
                        "type": "SelectVariable"
                    }
                },
                {
                    "caption": "Value",
                    "name": "ActionValue",
                    "width": "auto",
                    "align": "center",
                    "add": 0,
                    "edit": {
                        "type": "SelectValue"
                    }
                },
                {
                    "caption": "Hook",
                    "name": "ActionHook",
                    "width": "auto",
                    "align": "center",
                    "add": "",
                    "edit": {
                        "type": "ValidationTextBox"
                    }
                },
                {
                    "caption": "Label",
                    "name": "FkeyLabel",
                    "width": "auto",
                    "align": "center",
                    "add": "",
                    "edit": {
                        "type": "ValidationTextBox"
                    }
                },
                {
                    "caption": "LED color for on",
                    "name": "FkeyColorOn",
                    "width": "auto",
                    "align": "center",
                    "add": "",
                    "edit": {
                        "type": "Select",
                        "options": []
                    }
                },
                {
                    "caption": "LED color for off",
                    "name": "FkeyColorOff",
                    "width": "auto",
                    "align": "center",
                    "add": "",
                    "edit": {
                        "type": "Select",
                        "options": []
                    }
                }
            ],
            "values": [],
            "form": [
                {
                    "type": "NumberSpinner",
                    "name": "FkeyNo",
                    "caption": "Fkey No",
                    "minimum": 1,
                    "maximum": 4
                },
                {
                    "type": "CheckBox",
                    "name": "RecieveOnly",
                    "caption": "Recieve value only",
                    "onChange": "SNMD_SetValueFieldVisibility($id, $RecieveOnly);"
                },
                {
                    "type": "SelectVariable",
                    "name": "ActionVariableId",
                    "caption": "Action variable",
                    "onChange": "SNMD_SetVariableId($id, $ActionVariableId); SNMD_CreateHook($id, $ActionVariableId);"
                },
                {
                    "type": "SelectValue",
                    "name": "ActionValue",
                    "caption": "Value",
                    "variableID": 0
                },
                {
                    "type": "ValidationTextBox",
                    "name": "ActionHook",
                    "caption": "Hook"
                },
                {
                    "type": "ValidationTextBox",
                    "name": "FkeyLabel",
                    "caption": "Label"
                },
                {
                    "type": "Select",
                    "name": "FkeyColorOn",
                    "caption": "LED color for on",
                    "options": [
                        {
                            "caption": "Green",
                            "value": "green"
                        },
                        {
                            "caption": "Red",
                            "value": "red"
                        },
                        {
                            "caption": "Yellow",
                            "value": "yellow"
                        },
                        {
                            "caption": "Off",
                            "value": "off"
                        }
                        
                    ]
                },
                {
                    "type": "Select",
                    "name": "FkeyColorOff",
                    "caption": "LED color for off",
                    "options": [
                        {
                            "caption": "Green",
                            "value": "green"
                        },
                        {
                            "caption": "Red",
                            "value": "red"
                        },
                        {
                            "caption": "Yellow",
                            "value": "yellow"
                        },
                        {
                            "caption": "Off",
                            "value": "off"
                        }
                    ]
                },
                {
                    "type": "Button",
                    "caption": "Set",
                    "onClick": "SNMD_SetFkeySettings($id, $FkeyNo, $RecieveOnly, $ActionHook, $FkeyLabel);"
                }
            ]
        }
    ]
}